.MoveController
  border-radius 100px
  width 100px
  height: 100px
  border 4px solid yellow
  position relative
  margin-left 20px
  margin-bottom 20px
  &__move
    position absolute
    width: 30px
    height: 30px
    border-radius 50px
    background mediumvioletred
    transition all 0.2s
.Screen
  &__ctrl
    position fixed
    bottom 0
    left 0
