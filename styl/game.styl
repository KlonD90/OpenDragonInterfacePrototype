.MoveController
  border-radius 100px
  width 100px
  height: 100px
  border 4px solid yellow
  position relative
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.2);
  background: rgba(200,200,200,0.3);
  &__move
    position absolute
    width: 40px
    height: 40px
    border-radius 50px
    background mediumvioletred
    box-shadow: 2px 2px 4px 1px #ccc;
.Screen
  &__ctrl
    position fixed
    bottom 10%
    left 5%
