widthCount = 10
heightCount = 6
tileWidth = 100vw/widthCount
tileHeight = 100vh/heightCount

.MoveController
  border-radius 100px
  width 100px
  height: 100px
  border 4px solid yellow
  position relative
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.2);
  background: rgba(200,200,200,0.3);
  &__move
    position absolute
    width: 40px
    height: 40px
    border-radius 50px
    background mediumvioletred
    box-shadow: 1px 1px 4px 0px #ccc;
.Screen
  &__ctrl
    position fixed
    bottom 10%
    left 5%
.tile
  width tileWidth
  height tileHeight
  display inline-block
  background red
  float left
.tile:hover
  box-shadow inset 0px 0px 0px 1px rgba(0,0,0,0.5)
.field__row
  overflow:hidden
  white-space nowrap
body
  padding 0
  margin 0